{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": ["^@/", "^[./]"],
  "trailingComma": "all",
  "tabWidth": 2,
  "singleQuote": true,
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators-legacy",
    "decoratorAutoAccessors"
  ]
}
